public class Produto {

	public String nome;
	public double preco;
	public int estoque;
	
	public double tot() {
		
		return preco * estoque;
		
	}
	
	public void AdicionarProdutos(int qtd) {
		
		this.estoque = this.estoque + qtd;
		
	}
	
	public void Removerprodutos(int qtd) {
		
		this.estoque = this.estoque - qtd;
		
	}
	
}
